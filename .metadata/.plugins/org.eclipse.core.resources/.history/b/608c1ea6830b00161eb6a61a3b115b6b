package asynCommunication;

import java.awt.*;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

public class ClientGraph {
	private Frame frame;
	private Button bt;
	private TextArea  text;
	ClientGraph()
	{
		init();
	}
	
	public void init()
	{
		frame = new Frame("Client");
		bt = new Button("新建客户端线程");
		text = new TextArea();
		frame.setBounds(200, 200, 500, 500);
		GridBagLayout gridbag = new GridBagLayout();
		GridBagConstraints constraint = new GridBagConstraints();
		frame.setLayout(gridbag);
		constraint.weightx = 10;
		constraint.weighty = 20;
		gridbag.setConstraints(bt, constraint);
		frame.add(bt);
		constraint.weightx = 10;
		gridbag.setConstraints(text, constraint);
		frame.add(text);
		frame.addWindowListener(new WindowAdapter()  //为了关闭窗口
			{
				public void windowClosing(WindowEvent e)
				{
				       System.exit(0);
				}
			});
		frame.setVisible(true);
	}
	
	public static void main(String args[])
	{
		ClientGraph cg = new ClientGraph();
		
	}
	
}
